{% extends 'base.html.twig' %}

{% block body %}
	{# alert message #}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success mt-2">{{ message }}</div>
	{% endfor %}

	<div class="row">
		<div class="col-md-2 float-end">
			<a href="{{ path('create_post') }}" class="btn btn-success m-2">Add Post</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Title</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				<tr>
					<th scope="row">{{ loop.index }}</th>
					<td>{{ post.title }}</td>
					<td>
						<a href="{{ path('edit_post',{id: post.id}) }}" class="btn btn-success">Edit</a>
						<a href="{{ path('delete_post',{id: post.id}) }}" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock body %}
